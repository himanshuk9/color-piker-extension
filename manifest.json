{
    "manifest_version": 3,
    "name": " Himanshu's  Color Picker Extension",
    "version": "1.0",
    "description": "Pick colors and get their HEX or RGB values",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "/images/Picker_16.png",
        "32": "/images/Picker_32.png",
        "48": "/images/Picker_48.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ]
}